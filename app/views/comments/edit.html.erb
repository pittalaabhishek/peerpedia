<h1>Edit Comment</h1>

<%= form_with model: [@question, @answer, @comment], local: true do |form| %>
  <div>
    <%= form.label :body, "Edit your comment" %>
    <br>
    <%= form.text_area :body, rows: 5, required: true %>
  </div>
  <br>
  <div>
    <%= form.submit "Update Comment" %>
  </div>
<% end %>

<%= link_to 'Back', question_path(@question) %>
