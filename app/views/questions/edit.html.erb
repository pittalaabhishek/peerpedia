<h1>Edit Question</h1>

<%= form_with model: @question, local: true do |form| %>
  <div>
    <%= form.label :body, "Edit your question" %>
  </div>
  <br>
  <div>
    <%= form.text_area :body, rows: 5, required: true %>
  </div>
  <br>
  <div>
    <%= form.submit "Update Question" %>
  </div>
<% end %>

<%= link_to "Back to Question", @question %>